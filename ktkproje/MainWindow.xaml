<Window x:Class="ktkproje.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ktkproje"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Name="txtkad" Grid.Column="1" Grid.Row="0" Margin="30"></TextBox>
        <PasswordBox Name="txtsifre" Grid.Column="1" Grid.Row="1" Margin="30"></PasswordBox>
        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="30" Click="Button_Click"> Kullanıcı Girişi</Button>
        <Label Margin="30" Background="AliceBlue">Kullanıcı Adı</Label>
        <Label Margin="30" Grid.Column="0" Grid.Row="1" Background="AliceBlue" >Kullanıcı Sifresi</Label>
    </Grid>
</Window>
